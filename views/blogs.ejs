<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogs</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Blogs</h1>
        <a href="/blogs/create" class="btn btn-primary">Create New Blog</a>
      </div>

      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (blog.coverImageURL) { %>
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="Blog Cover"
            />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
              <p class="card-text">
                <small class="text-muted"
                  >By <%= blog.createdBy.fullName %></small
                >
              </p>
              <a href="/blogs/<%= blog._id %>" class="btn btn-primary"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
